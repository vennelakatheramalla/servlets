<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>MyFirstWebProject</display-name>
	<welcome-file-list>
		<welcome-file>home.html</welcome-file>

	</welcome-file-list>

	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>com.iq.controller.Hello</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>sum</servlet-name>
		<servlet-class>com.iq.controller.AddNumbers</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>sum</servlet-name>
		<url-pattern>/addition</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>hi</servlet-name>
		<servlet-class>com.iq.controller.Hi</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>hi</servlet-name>
		<url-pattern>/hi</url-pattern>
	</servlet-mapping>

</web-app>